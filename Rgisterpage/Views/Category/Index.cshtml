@model IEnumerable<Rgisterpage.Models.Category>

@{
    ViewBag.Title = "Index";
}



<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CategoryId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CategoryName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.status)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }) |
        @Html.ActionLink("Details", "Details", new { id = item.CategoryId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId })
        


        @if (item.ActiveOrNot == false)
        {

            @Html.ActionLink("Activate", "Active", new { CategoryId = item.CategoryId}, new { @class = "btn btn-success" })
        }
        else
        {
            @Html.ActionLink("Deactivate", "Deactive", new { CategoryId = item.CategoryId }, new { @class = "btn btn-warning" })
        }

    </td>
    



</tr>
}

</table>
